<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="车辆账户充值"
        android:textSize="20sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:stretchColumns="1">

        <TableRow>

            <TextView android:text="车牌号" />

            <TextView android:id="@+id/carmanager_tv_dialogrechargecarids" />

        </TableRow>

        <TableRow>

            <TextView android:text="充值金额" />

            <EditText
                android:id="@+id/carmanager_et_dialogmoney"
                android:singleLine="true" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/carmanager_btn_dialogrecharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="充值" />

        <Button
            android:id="@+id/carmanager_btn_dialogcancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消" />

    </LinearLayout>

</LinearLayout>