<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="400dp"
    android:layout_height="match_parent">

    <TextView
        android:text="车辆账户充值"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TableLayout
        android:padding="10dp"
        android:stretchColumns="1"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:text="车辆编号"/>

            <TextView
                android:id="@+id/rechargedialog_tv_CarIds"/>

        </TableRow>

        <TableRow>

            <TextView
                android:text="充值金額"/>

            <EditText
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:id="@+id/rechargedialog_et_money"
                android:text="100"/>

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/rechargedialog_btn_recharge"
            android:text="充值"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/rechargedialog_btn_cancel"
            android:layout_width="wrap_content"
            android:text="取消"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>